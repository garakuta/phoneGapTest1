<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.phonegap.example"
    version   = "1.0.0">

<name>PhoneGap Build GeoLoacation Sample.</name>

<description>
  A PhoneGap Build application sample with 
  GeoLocation API and Google Maps API.
</description>

<!-- パーミッションの要求 -->
<preference name="permissions" value="none"/>
<feature name="http://api.phonegap.com/1.0/geolocation"/>

<!-- Google Maps API利用のための設定 -->
<access origin="http://maps.google.com" subdomains="true" />
<access origin="http://googleapis.com" subdomains="true" />
<access origin="http://gstatic.com" subdomains="true" />

</widget>
